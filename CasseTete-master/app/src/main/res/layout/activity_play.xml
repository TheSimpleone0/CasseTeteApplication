<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:angle="270"
    android:endColor="#272bca"
    android:orientation="vertical"
    android:startColor="#262629"
    tools:context="com.example.bazile.p8cassetete.AboutActivity">


    <com.example.bazile.p8cassetete.CasseTeteView2
        android:id="@+id/Cassetete2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.example.bazile.p8cassetete.CasseTeteView2>

    <TextView
        android:id="@+id/temps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:text="Temps"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/background_floating_material_light" />


    <Button
        android:id="@+id/playRetour"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:background="@android:color/transparent"
        android:onClick="onClick"
        android:text="Retour"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/background_material_light" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="12dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/background_material_light" />

    <Button
        android:id="@+id/playSuivant"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:background="@android:color/transparent"
        android:onClick="onClick"
        android:text="Suivant"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/background_material_light" />

    <TextView
        android:id="@+id/level"
        android:layout_width="108dp"
        android:layout_height="120dp"
        android:layout_gravity="right|top"
        android:layout_marginLeft="35dp"
        android:text=""
        android:textColor="@color/background_material_light" />

    <TextView

        android:id="@+id/Lose"
        android:layout_width="326dp"
        android:layout_height="196dp"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="35dp"
        android:text="Perdu"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/background_material_light" />

</FrameLayout>
